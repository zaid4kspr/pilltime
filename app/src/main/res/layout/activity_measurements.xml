<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_marginTop="54dp"
        android:layout_marginBottom="54dp"
        android:id="@+id/addMed1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="143dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/temp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Track temperature"
            android:textColor="#56b0b6"
            android:textColorLink="#3F51B5"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Record your body temperature"
            android:textStyle="normal" />

        <Button
            android:id="@+id/addMeasBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="#56b0b6"
            android:onClick="onClickStartSelectMeas"
            android:text="Add a temperature measurment" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>